{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Sign up</h1>
                {{ form_start(form) }}
                {{ form_errors(form) }}

                {{ form_row(form.email) }}
                {{ form_row(form.password) }}

                <button type="submit" class="btn btn-default btn-primary btn-block" formnovalidate>Sign up</button>
                <br>
                <a href="{{ path('security_login') }}">I already have an account</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}