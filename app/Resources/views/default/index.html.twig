{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
    {% if is_granted('ROLE_USER') %}
        <h1>Hi {{ app.user.email }}!</h1>
    {% endif %}
            <ul class="nav">
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item"><a class="nav-link"
                                            href="{{ path('security_logout') }}">Logout</a></li>
                {% else %}
                    <li class="nav-item"><a class="nav-link"
                                            href="{{ path('security_login') }}">Login</a></li>
                    <li class="nav-item"><a class="nav-link"
                                            href="{{ path('user_register') }}">Registration</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>

{% endblock %}
